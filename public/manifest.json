{
  "name": "Sugu",
  "description": "Instant spotlight like search and actions in your browser with Sugu Search.",
  "offline_enabled": true,
  "version": "1.0.0",
  "manifest_version": 3,
  "action": {
    "default": "sugu.html",
    "default_icons": {
      "16": "icons/logo-16.png",
      "48": "icons/logo-48.png",
      "128": "icons/logo-128.png"
    }
  },
  "icons": {
    "16": "/icons/logo-16.png",
    "48": "/icons/logo-48.png",
    "128": "/icons/logo-128.png"
  },
  "commands": {
    "open-sugu": {
      "suggested_key": {
        "default": "Ctrl+Shift+K",
        "mac": "Command+Shift+K"
      },
      "description": "Open Sugu Search"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_end",
      "js": ["build/sugu.js"],
      "css": ["build/sugu.css"]
    }
  ],
  "background": {
    "service_worker": "background.js"
  },
  "web_accessible_resources": [
    {
      "resources": ["fonts/*", "icons/*", "build/*"],
      "matches": ["<all_urls>"]
    }
  ],
  "permissions": [
    "tabs",
    "activeTab",
    "bookmarks",
    "browsingData",
    "history",
    "scripting"
  ],
  "host_permissions": [
    "https://www.googleapis.com/*",
    "https://gstatic.com/*",
    "*://*/*"
  ]
}
